#Bellow are the MySQL Environment variables
MYSQLDBSRV=
MYSQLDBUSR=
MYSQLDBPWD=
MYSQLDBPRT=3306


# Application Server environment variables
ALLOW_ORIGINS=http://127.0.0.1:8080, http://localhost:8080
APP_SRV_ADDR=http://localhost:8000
MISTRAL_API_KEY=
GROQ_API_KEY=


#File upload general settings
# TOTAL_ALLOWED_UPLOADS 
#   * Sets how many files can be uploaded per namespaces, 
#   * -1 means unlimited uploads
TOTAL_ALLOWED_UPLOADS=-1


#AI Agent general config
# CONVERSATION_TURN_LIMIT 
#   * Especially for demo environment, sets how many messages each user can send to AI agent, 
#   * -1 means unlimited messages
CONVERSATION_TURN_LIMIT=-1

# Secret Management
HASHICORP_HOST=http://127.0.0.1:8200
HASHICORP_TOKEN=root

# Enhanced Logging System Configuration
# Core logging settings
LOGGING_LEVEL=INFO
LOGGING_ENABLE_CONSOLE=true
LOGGING_ENABLE_FILE=true
LOGGING_ENABLE_DATABASE=true

# Database settings
LOGGING_MAX_DB_CONNECTIONS=10
LOGGING_CONNECTION_TIMEOUT=30

# Retention settings
LOGGING_RETENTION_DAYS=30
LOGGING_MAX_LOGS_PER_PIPELINE=10000
LOGGING_CLEANUP_INTERVAL_HOURS=24

# Performance settings
LOGGING_BATCH_SIZE=100
LOGGING_FLUSH_INTERVAL=5
LOGGING_MAX_QUEUE_SIZE=1000

# Fault tolerance settings
LOGGING_ENABLE_FAULT_TOLERANCE=true
LOGGING_MAX_RETRY_ATTEMPTS=3
LOGGING_RETRY_DELAY=1.0
LOGGING_CIRCUIT_BREAKER_THRESHOLD=5
LOGGING_CIRCUIT_BREAKER_TIMEOUT=60

# Fallback storage settings
LOGGING_ENABLE_FALLBACK=true
LOGGING_FALLBACK_DIRECTORY=logs/fallback
LOGGING_FALLBACK_MAX_FILES=100

# WebSocket integration
LOGGING_ENABLE_WEBSOCKET=true
LOGGING_WEBSOCKET_BUFFER_SIZE=1000

# Flask integration
LOGGING_ENABLE_FLASK=true
LOGGING_LOG_REQUEST_DETAILS=true
LOGGING_LOG_RESPONSE_DETAILS=false

# Pipeline-specific settings
LOGGING_LOG_PIPELINE_STAGES=true
LOGGING_LOG_TRANSFORMATION_DETAILS=true
LOGGING_LOG_ERROR_STACK_TRACES=true
LOGGING_CAPTURE_ENVIRONMENT_INFO=true

# Development settings (set to false in production)
LOGGING_DEBUG_MODE=false
LOGGING_LOG_SQL_QUERIES=false
LOGGING_ENABLE_PERFORMANCE_METRICS=false
